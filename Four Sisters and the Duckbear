//creating a program that will divide a number of eggs gathered evenly between three sisters, and their duckbear gets the remaining eggs

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp2
{ 
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("How many eggs were gathered today?");
            int eggs = Convert.ToInt32(Console.ReadLine());

            Console.WriteLine();

            int sister = eggs / 3;
            int duckbear = eggs % 3;

            Console.WriteLine($"Each sister will get {sister} and the duckbear gets {duckbear} eggs!");

            Console.ReadLine();
            
