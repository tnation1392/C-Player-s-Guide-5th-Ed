using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp3
{
    internal class Program
    {
        static void Main(string[] args)
        {
            {
                int pirate = Convert.ToInt32(Console.ReadLine());
                switch(pirate)
                {
                    case 1:
                        Console.WriteLine("Ye rest and recover");
                        break;
                     case 2:
                        Console.WriteLine("Raid the port town ye get 50 gold");
                        break;
                     case 3:
                        Console.WriteLine("The wind is at your back");
                        break;
                     case 4:
                        Console.WriteLine("There's a baby kraken ahead!");
                        break;
                }
                Console.ReadLine();
